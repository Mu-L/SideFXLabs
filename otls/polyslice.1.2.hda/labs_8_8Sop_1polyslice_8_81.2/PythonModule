## Set tool to bounding box
def set_to_bbox(**kwargs):
    tool = kwargs['node']
    bb = tool.node('CALC_BBOX').geometry().boundingBox()
    cent = bb.center()
    tool.parmTuple('t2').set(cent)
    size = bb.sizevec()
    tool.parmTuple('size').set(size)
    tool.parm('scale2').set(1)
    rot = [0, 0, 0]
    tool.parmTuple('r2').set(rot)
    
  